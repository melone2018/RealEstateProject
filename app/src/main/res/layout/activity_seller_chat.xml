<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SellerChat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imageButton_closeButton_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_close_grey"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_seller">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout2_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout1_seller">
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_messagebox_chat_window_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimension_5"
            android:layout_marginRight="@dimen/dimension_5"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/edittext_background"
            android:padding="@dimen/dimension_10"
            android:hint="@string/et_messagebox_hint"
            />
        <ImageButton
            android:id="@+id/button_sendMessage_chat_window_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorCyan"
            android:padding="@dimen/dimension_8"
            android:layout_marginTop="@dimen/dimension_8"
            android:layout_gravity="bottom"
            android:background="@drawable/send_button_background"
            android:src="@drawable/ic_send"
            />
    </LinearLayout>
</LinearLayout>